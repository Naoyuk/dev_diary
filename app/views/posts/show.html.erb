<%= provide(:title, @post.title) %>
<h1><%= @post.title %></h1>

<div class="article">
  <div class="article-header">
    <p>Created at: <%= @post.created_at %><br>Latest updated at: <%= @post.updated_at %></p>
  </div>
  <div class='edit-post'>
    <%= link_to 'Edit', edit_post_path(@post) %>
  </div>
  <div class="article-body">
    <%= @post.body %>
  </div>
</div>
