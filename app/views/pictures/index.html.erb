<script>
    function copyUrl(url){
        let head_of_file_name_pos = url.lastIndexOf('/') + 1;
        let alt = url.substring(head_of_file_name_pos);
        let markdown_syntax = "![" + alt + "](" + url + ")";
        navigator.clipboard.writeText(markdown_syntax);
    }
</script>
