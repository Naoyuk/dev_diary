<% if @user.errors.any? %>
  <div id="error_messages">
    <div class="alert">
      The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |e| %>
        <li class="error_message"><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>
